method 1
def count_set_bits(n:int)->int:
    binary = bin(n)[2:]
    binary_list = list(map(int,str(binary)))
    count = 0

    for bit in binary_list:
        if bit == 1:
            count+=1
    
    return count

if __name__ == "__main__":
    n = 15
    print(count_set_bits(n))





#method 2: Brian Kernighanâ€™s Algorithm
def countSetBits(n: int) -> int:
    count = 0
    while n:
        n = n & (n - 1)
        count += 1
    return count



Method 2: Right Shift + AND (Basic but safe)
def countSetBits(n: int) -> int:
    count = 0
    while n:
        count += n & 1
        n >>= 1
    return count
