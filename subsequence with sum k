def count_subsequences(nums, k):
    def dfs(i, curr_sum):
        # BASE CASE: all elements considered
        if i == len(nums):
            return 1 if curr_sum == k else 0

        # INCLUDE nums[i]
        include = dfs(i + 1, curr_sum + nums[i])

        # EXCLUDE nums[i]
        exclude = dfs(i + 1, curr_sum)

        return include + exclude

    return dfs(0, 0)




